{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2022",
    "lib": ["ES2022", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noErrorTruncation": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
