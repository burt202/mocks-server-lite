{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noErrorTruncation": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    // npm package settings
    "declaration": true,
    "outDir": "./dist"
  },
  "include": ["./src/**/*"]
}
